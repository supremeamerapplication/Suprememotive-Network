{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "outputDirectory": ".",
  "publicPath": "/",
  "env": {
    "SUPABASE_URL": "@SUPABASE_URL",
    "SUPABASE_ANON_KEY": "@SUPABASE_ANON_KEY"
  },
  "redirects": [
    {
      "source": "/404",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "**/*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(index|[a-z]+|admin)\\.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/:path*",
      "destination": "/:path*/index.html"
    }
  ],
  "functions": {
    "api/**": {
      "maxDuration": 60
    }
  }
}
